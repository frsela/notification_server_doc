.PS
copy "sequence.pic"

#boxwid = 1
#movewid = 2.7

# Object definition
object(A,"WA")
object(N,"UA")
object(S1,"NS 1")
object(S2,"NS 2")
object(W,"AS")
step

# Bootstrap - register node IP adress
step

# Registration on Notification Server
active(N)
message(N,S1,"registerUA")
active(S1)
message(S1,S2,"registerUA")
active(S2)
return_message(S2,S1,"OK")
inactive(S2)
return_message(S1,N,"OK")
inactive(S1)
step
inactive(N)

# app registration
active(A)
message(A,N,"requestURL()")
active(N)
message(N,S1,"registerWA")
active(S1)
message(S1,S2,"registerWA")
active(S2)
return_message(S2,S1,"URL")
inactive(S2)
return_message(S1,N,"URL")
inactive(S1)
return_message(N,A,"publicURL")
inactive(N)
message(A,W,"register(publicURL)")
active(W)
return_message(W,A,"200 OK")
inactive(W)
step
inactive(A)

# push notification
active(W)
message(W,S1,"notification & signature")
  active(S1)
  message(S1,S1,"Verify signature")
  message(S1,S2,"notif. & sign.")
    active(S2)
    message(S2,S2,"verify signature")
    message(S2,N,"data")
    active(N)
    message(N,A,"event(data)")
    active(A)
    return_message(A,N,"OK")
    inactive(A)
    return_message(N,S2,"OK")
    inactive(N)
    return_message(S2,S1,"OK")
    inactive(S2)
  return_message(S1,W,"OK")
  inactive(S1)
inactive(W)

# End diagram
step
complete(A)
complete(N)
complete(S1)
complete(S2)
complete(W)

.PE