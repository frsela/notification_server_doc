.PS
copy "sequence.pic"

#boxwid = 1
movewid = 1

# Object definition
object(W,"WA")
object(U,"UA")
object(N,"NS")
object(S,"AS")
step

# Open channel
active(U)
message(U,N,"Open WebSocket")
active(N)
  # Register Node
  message(U,N,"registerUA")
  message(N,N,"Check & add UA into DB")
  return_message(N,U,"OK + msg + wa")

  # Register Application
  active(W)
  message(W,U,"requestURL")
  message(U,N,"registerWA")
  message(N,N,"Verify & Store into DB")
  return_message(N,U,"URL")
  return_message(U,W,"URL")
  message(U,N,"Close")
  return_message(N,U,"Close WebSocket")
  inactive(U)
  inactive(N)
  message(W,S,"URL")
  active(S)
  message(S,S,"Store")
  inactive(S)
  inactive(W)

  step

  # Notification
  active(S)
  message(S,N,"POST notification")
  inactive(S)
  active(N)
  message(N,U,"Wake Up node")
  active(U)
  inactive(N)

  message(U,N,"Open WebSocket")
  active(N)
  message(U,N,"registerUA")
  message(N,N,"Check & add UA into DB")
  return_message(N,U,"OK + msg + wa")


  inactive(N)
  message(U,W,"Notification")
  active(W)
  step
  inactive(W)
message(U,N,"Close")
return_message(N,U,"Close WebSocket")
inactive(N)
inactive(U)

# End diagram
step
complete(N)
complete(S)
complete(W)
complete(U)

